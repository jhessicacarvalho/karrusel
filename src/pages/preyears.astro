---
import Layout from "../layouts/Layout.astro";
import "../styles/general.css";
import Tree from "../components/Tree.astro";
---

<Layout>
  <h1>Earlier Years</h1>
  <div class="header_container">
    <img src="../../public/pre_years3.webp" alt="" />
  </div>
  <div class="container">
    <img
      src="../../public/pre_1.svg"
      alt="Billede"
      class="zoom-img"
      id="zoomImg1"
    />
    <img
      src="../../public/pre_2.svg"
      alt="Billede"
      class="zoom-img"
      id="zoomImg2"
    />
    <img
      src="../../public/pre_3.svg"
      alt="Billede"
      class="zoom-img"
      id="zoomImg3"
    />
  </div>
  <section>
    <div class="nedtæller-text">
      <p>2023</p>
      <p>2022</p>
      <p>2021</p>
    </div>
  </section>
  <div class="container">
    <img
      src="../../public/pre_1.svg"
      alt="Billede"
      class="zoom-img"
      id="zoomImg1"
    />
    <img
      src="../../public/pre_2.svg"
      alt="Billede"
      class="zoom-img"
      id="zoomImg2"
    />
    <img
      src="../../public/pre_3.svg"
      alt="Billede"
      class="zoom-img"
      id="zoomImg3"
    />
  </div>
  <section>
    <div class="nedtæller-text">
      <p>2023</p>
      <p>2022</p>
      <p>2021</p>
    </div>
  </section>
  <Tree />
</Layout>

<style>
  h1 {
    font-family: transformers;
    color: #ccb1f3;
    text-shadow: 0 4px 0px #9e63f3;
    text-align: center;
  }

  .container {
    text-align: center;
    margin-top: 50px;
  }

  .image-container {
    margin-bottom: 20px;
  }

  .zoom-img {
    width: 200px; /* Adjust size as needed */
    transition: transform 0.3s;
  }

  .zoom-img:hover {
    transform: scale(1.2); /* Adjust zoom level as needed */
    cursor: pointer;
  }

  .image-container img {
    max-width: 100%;
    height: auto;
  }

  .nedtæller-text {
    display: flex;
    justify-content: space-evenly;
  }

  /* Adjust spacing and font size for text under images */
  .image-container p {
    margin-top: 5px; /* Adjust as needed */
    font-size: 14px; /* Adjust font size as needed */
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  .header_container {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  img {
    padding-left: 70px;
    padding-right: 70px;
  }
</style>

<script>
  // Hent hvert af billederne fra HTML ved hjælp af deres unikke ID
  const zoomImg1 = document.getElementById("zoomImg1");
  const zoomImg2 = document.getElementById("zoomImg2");
  const zoomImg3 = document.getElementById("zoomImg3");

  // Opret variabler til at holde styr på om hvert billede er zoomet ind eller ej
  let isZoomed1 = false;
  let isZoomed2 = false;
  let isZoomed3 = false;

  // Tilføj en event listener til det første billede
  zoomImg1.addEventListener("click", function () {
    toggleZoom(zoomImg1, isZoomed1); // Kald funktionen toggleZoom med det første billede og dets zoom-status
    isZoomed1 = !isZoomed1; // Opdater zoom-status for det første billede
  });

  // Tilføj en event listener til det andet billede
  zoomImg2.addEventListener("click", function () {
    toggleZoom(zoomImg2, isZoomed2); // Kald funktionen toggleZoom med det andet billede og dets zoom-status
    isZoomed2 = !isZoomed2; // Opdater zoom-status for det andet billede
  });

  // Tilføj en event listener til det tredje billede
  zoomImg3.addEventListener("click", function () {
    toggleZoom(zoomImg3, isZoomed3); // Kald funktionen toggleZoom med det tredje billede og dets zoom-status
    isZoomed3 = !isZoomed3; // Opdater zoom-status for det tredje billede
  });

  // Funktionen til at skifte mellem at zoome ind og ud
  function toggleZoom(image, isZoomed) {
    if (isZoomed) {
      image.style.transform = "scale(1)"; // Hvis billedet allerede er zoomet, så skaler det tilbage til normal størrelse (1x)
    } else {
      image.style.transform = "scale(2)"; // Hvis billedet ikke er zoomet, så skaler det til 3 gange dets oprindelige størrelse
    }
  }
</script>
