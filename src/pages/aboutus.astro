    right: 0rem;
    top:;
  }
  .stjerne1_container {
    position: absolute;
    right: 38%;
    top: -1%;
    transform: scaleX(-1);
  }
  .small_star {
    scale: 0.8;
  }

  .big_star {
    position: relative;
    top: -4.5rem;
    left: -2.5rem;
  }
</style>
